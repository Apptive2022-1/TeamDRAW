<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.teamdraw.viewmodels.UserInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="여러분의 능력 자유롭게 알려주세요!"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintBottom_toTopOf="@id/textView3"
            >

            <RadioButton
                android:id="@+id/radio_button_H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상"
                android:layout_marginEnd="10dp"
                />

            <RadioButton
                android:id="@+id/radio_button_M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중"
                android:layout_marginEnd="10dp" />

            <RadioButton
                android:id="@+id/radio_button_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하"
                android:layout_marginEnd="10dp" />


        </RadioGroup>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="상"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/radio_group" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_skillHigh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <Button
                android:id="@+id/skill1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:hint="상 스킬"
                android:text="@{user.skillH}"
                android:background="@drawable/frame_btn_notselected2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="중"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout_skillHigh"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_skillHigh" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_skillMid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <Button
                android:id="@+id/skill2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:textSize="10sp"
                android:hint="중 스킬"
                android:text="@{user.skillM}"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="하"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout_skillMid"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_skillMid" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_skillLow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <Button
                android:id="@+id/skill3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:textSize="10sp"
                android:hint="하 스킬"
                android:text="@{user.skillL}"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_skillLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout_skillLow"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_skillLow">

            <Button
                android:id="@+id/skillL1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:textSize="10sp"
                android:hint="스킬 1"
                android:text="@{user.skillList.get(0)}"
                app:layout_constraintBottom_toTopOf="@+id/skillL5"
                app:layout_constraintEnd_toStartOf="@+id/skillL2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/skillL2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 2"
                android:text="@{user.skillList.get(1)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/skillL3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/skillL1"
                app:layout_constraintTop_toTopOf="@+id/skillL1" />

            <Button
                android:id="@+id/skillL3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 3"
                android:text="@{user.skillList.get(2)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/skillL4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/skillL2"
                app:layout_constraintTop_toTopOf="@+id/skillL2" />

            <Button
                android:id="@+id/skillL4"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 4"
                android:text="@{user.skillList.get(3)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/skillL3"
                app:layout_constraintTop_toTopOf="@+id/skillL3" />

            <Button
                android:id="@+id/skillL5"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 5"
                android:text="@{user.skillList.get(4)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/skillL6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skillL1" />

            <Button
                android:id="@+id/skillL6"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 6"
                android:text="@{user.skillList.get(5)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/skillL7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/skillL5"
                app:layout_constraintTop_toTopOf="@+id/skillL5" />

            <Button
                android:id="@+id/skillL7"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 7"
                android:text="@{user.skillList.get(6)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/skillL8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/skillL6"
                app:layout_constraintTop_toTopOf="@+id/skillL6" />

            <Button
                android:id="@+id/skillL8"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_btn_notselected2"
                android:hint="스킬 8"
                android:text="@{user.skillList.get(7)}"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/skillL7"
                app:layout_constraintTop_toTopOf="@+id/skillL7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>